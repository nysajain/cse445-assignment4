<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    
    <!-- Root element Hotels -->
    <xs:element name="Hotels">
        <xs:complexType>
            <xs:sequence>
                <!-- Multiple Hotel elements allowed -->
                <xs:element name="Hotel" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <!-- Name element (required) -->
                            <xs:element name="Name" type="xs:string"/>
                            
                            <!-- Address element (required) - comes BEFORE Phone -->
                            <xs:element name="Address">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="Street" type="xs:string"/>
                                        <xs:element name="City" type="xs:string"/>
                                        <xs:element name="State" type="xs:string"/>
                                        <xs:element name="Zip" type="xs:string"/>
                                    </xs:sequence>
                                    <!-- Number attribute (required) -->
                                    <xs:attribute name="Number" type="xs:string" use="required"/>
                                    <!-- NearestAirport attribute (optional) -->
                                    <xs:attribute name="NearestAirport" type="xs:string" use="optional"/>
                                </xs:complexType>
                            </xs:element>
                            
                            <!-- Phone element (at least one required, multiple allowed) - comes AFTER Address -->
                            <xs:element name="Phone" type="xs:string" maxOccurs="unbounded"/>
                        </xs:sequence>
                        <!-- Rating attribute (required) -->
                        <xs:attribute name="Rating" type="xs:string" use="required"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
</xs:schema>